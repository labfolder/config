    "yolo": "node .circleci/publish.js"
  },
  "devDependencies": {
    "@labforward/config": "^0.0.1",
    "@labforward/eslint-config-node": "^0.0.1",
    "eslint": "^7.23.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "sort-package-json": "^1.49.0"
  },
  "engines": {
    "node": ">=12.11.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "@labforward/config/import-sort"
    }
  }
}
