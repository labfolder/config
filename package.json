  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@labforward/config": "~0.1.0",
    "@labforward/eslint-config-node": "~0.1.0",
    "eslint": "^8.36.0",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.0",
    "prettier": "^2.8.4",
    "sort-package-json": "^2.4.1",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@3.5.0",
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "importSort": {
    ".js, .jsx, .mjs, .ts, .tsx": {
      "style": "@labforward/config/import-sort"
