{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "jsx": "preserve"
  },
  // These paths are relative to this config file and only used
  // for TypeScript to be happy.
  "include": ["test"],
  "exclude": ["node_modules", "drivers"],
  "compileOnSave": false
}
